@model ST10134934_CLDV6211_Part_Two.Models.Kuser

@{
    ViewData["Title"] = "Create";
}

<h1>Register</h1>

<h4>New User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KuserName" class="control-label"></label>
                <input asp-for="KuserName" class="form-control" />
                <span asp-validation-for="KuserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KuserEmail" class="control-label"></label>
                <input asp-for="KuserEmail" class="form-control" />
                <span asp-validation-for="KuserEmail" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label>Choose User Type:</label><br />
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="customerCheckbox" name="KuserType" value="Customer"> @Html.DisplayNameFor(model => model.KuserType)
                    <label class="form-check-label" for="customerCheckbox">Customer</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="artisanCheckbox" name="KuserType" value="Artisan"> @Html.DisplayNameFor(model => model.KuserType)
                    <label class="form-check-label" for="artisanCheckbox">Artisan</label>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
